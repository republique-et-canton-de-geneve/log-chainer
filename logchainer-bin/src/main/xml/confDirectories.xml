<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<logChainerConf xmlns="http://service.logchainer.ge.ch/">
<!-- Directories path to adapt to environnement -->

	<listeClientConf>
		<ClientId>ClientA</ClientId>
		<InputDir>/opt/batch/logchainer/ClientA/input</InputDir>
		<WorkingDir>/opt/batch/logchainer/ClientA/tmp</WorkingDir>
		<OutputDir>/opt/batch/logchainer/ClientA/output</OutputDir>
		<CorruptedFilesDir>/opt/batch/logchainer/ClientA/corruptedFiles</CorruptedFilesDir>
		<filePattern>
			<separator>_</separator>
			<sortingType>alphabetical</sortingType>
		</filePattern>
		<fileEncoding>UTF-8</fileEncoding>
	</listeClientConf>

	<listeClientConf>
		<ClientId>ClientB</ClientId>
		<InputDir>/opt/batch/logchainer/ClientB/input</InputDir>
		<WorkingDir>/opt/batch/logchainer/ClientB/tmp</WorkingDir>
		<OutputDir>/opt/batch/logchainer/ClientB/output</OutputDir>
		<CorruptedFilesDir>/opt/batch/logchainer/ClientB/corruptedFiles</CorruptedFilesDir>
		<filePattern>
			<separator>_</separator>
			<sortingType>numerical</sortingType>
		</filePattern>
		<fileEncoding>UTF-8</fileEncoding>
	</listeClientConf>
</logChainerConf>