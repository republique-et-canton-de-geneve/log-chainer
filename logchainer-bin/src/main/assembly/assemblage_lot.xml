<assembly>
	<id>assemblage</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>

	<files>
		<file>
			<source>src/main/config/application.properties</source>
			<outputDirectory>/conf</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/config/errorMessages.properties</source>
			<outputDirectory>/conf</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/config/logback.properties</source>
			<outputDirectory>/conf</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/xml/confDirectories.xml</source>
			<outputDirectory>/conf/xml</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/bin/run.sh</source>
			<outputDirectory>/bin</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/readmeForFolderExample/readme</source>
			<outputDirectory>/clientExample/input</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/readmeForFolderExample/readme</source>
			<outputDirectory>/clientExample/output</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/readmeForFolderExample/readme</source>
			<outputDirectory>/clientExample/workingDir</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/readmeForFolderExample/readme</source>
			<outputDirectory>/clientExample/corruptedFiles</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>src/main/assembly</directory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
			</includes>
			<outputDirectory>/</outputDirectory>
			<!-- uniquement Ãƒ partir du plugin assembly 2.2 <useStrictFiltering>true</useStrictFiltering> 
				<filtered>true</filtered> -->
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>ch.ge.cti.logchainer:logchainer</include>
			</includes>
			<unpack>false</unpack>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>

